<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NotificationTitle">
        <item name="android:textColor">@color/sol_menu_baslik_rengi</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="matrislinearlayoutrowstyle">
        <item name="android:padding">5dp</item>
        <item name="android:weightSum">60</item>
    </style>
    <style name="matriseditstyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittext</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="baslikStyle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="baslikStyle2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="baslikStyle3">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="icerikStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="solmenu_titleStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>